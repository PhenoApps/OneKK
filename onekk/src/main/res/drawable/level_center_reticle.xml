<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="ring"
            android:innerRadiusRatio="2.5"
            android:thickness="0.7dp"
            android:useLevel="false">
            <solid
                android:color="@android:color/white"/>
            <size android:height="64dp" android:width="64dp"/>
        </shape>
    </item>

    <item android:bottom="@dimen/reticle_line_padding"
        android:top="@dimen/reticle_line_padding"
        android:end="@dimen/reticle_line_padding"
        android:start="@dimen/reticle_line_padding">
        <shape android:shape="line">
            <stroke android:width="1dp"
                android:color="@android:color/white" />
        </shape>
    </item>

    <item android:bottom="@dimen/reticle_line_padding"
        android:top="@dimen/reticle_line_padding"
        android:end="@dimen/reticle_line_padding"
        android:start="@dimen/reticle_line_padding">
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-90">
            <shape android:shape="line">
                <stroke android:width="1dp"
                    android:color="@android:color/white" />
            </shape>
        </rotate>
    </item>

</layer-list>